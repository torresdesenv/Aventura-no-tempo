# Lip Reading Translator - Environment Variables
# Copy this file to .env and fill in your API keys

# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Google Cloud Video Intelligence API (optional)
GOOGLE_VIDEO_INTELLIGENCE_API_KEY=your_video_intelligence_api_key_here

# Azure Translator (alternative to Google Translate)
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=your_region_here

# Custom ML Model URLs (if hosting your own models)
LIP_READING_MODEL_URL=https://your-server.com/models/lipnet.json
FACE_DETECTION_MODEL_URL=https://your-server.com/models/face-detection.json

# App Configuration
APP_ENV=development
DEBUG_MODE=true
ENABLE_ANALYTICS=false

# Feature Flags
ENABLE_OFFLINE_MODE=false
ENABLE_CLOUD_SYNC=false
ENABLE_HISTORY=true
